---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import s1 from '../../public/symbols/s1.png';
---

<BaseLayout
  title="Contact upintown | Let's Build Something Great Together"
  description="Ready to bring your digital vision to life? Contact upintown for modern web development, UI/UX design, and digital solutions. Email: contact@upintown.dev"
  image="/og-image.jpg"
  pageStyles={['contact']}
  pageScripts={['contact']}
>
  <section class="contact">
    <div class="home-spotlight-top-bar">
      <div class="container">
        <div class="symbols-container">
          <div class="symbol">
            <Image src={s1} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
        <div class="symbols-container">
          <div class="symbol">
            <Image src={s1} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="contact-header">
        <div class="contact-callout">
          <a href="mailto:contact@upintown.dev" class="mono" data-animate-type="scramble" data-animate-delay="0.25">
            <span>&#9654;</span> Email: contact@upintown.dev
          </a>
        </div>
        <div class="contact-header-title">
          <h2 data-animate-type="line-reveal" data-animate-delay="0.25">
            Tell us about your project
          </h2>
        </div>
      </div>
    </div>
    <div class="home-spotlight-bottom-bar">
      <div class="container">
        <p class="mono" data-animate-type="scramble" data-animate-delay="0.25">
          <span>&#9654;</span> Instagram (Coming Soon)
        </p>
        <p class="mono" data-animate-type="scramble" data-animate-delay="0.25">
          <span>&#9654;</span> Twitter / X (Coming Soon)
        </p>
        <a href="https://github.com/rvph10" target="_blank" rel="noopener noreferrer" class="mono" data-animate-type="scramble" data-animate-delay="0.25">
          <span>&#9654;</span> Github
        </a>
        <p class="mono" data-animate-type="scramble" data-animate-delay="0.25">
          <span>&#9654;</span> Linkedin (Coming Soon)
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
