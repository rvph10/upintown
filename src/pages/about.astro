---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import { PAGE_SEO } from '../data/seo-config';
import s1 from '../../public/symbols/s1.png';
import s2 from '../../public/symbols/s2.png';
import s3 from '../../public/symbols/s3.png';
---

<BaseLayout
  title={PAGE_SEO.about.title}
  description={PAGE_SEO.about.description}
  image={PAGE_SEO.about.image}
  keywords={PAGE_SEO.about.keywords}
  pageStyles={['home', 'about']}
  pageScripts={['anime', 'about']}
>
  <section class="about-hero" aria-labelledby="about-heading">
    <div class="container">
      <div class="about-header">
        <h1 id="about-heading" data-animate-type="line-reveal" data-animate-delay="0.25">
          We don't just build, we <span class="accent-text">create</span> experiences
        </h1>
      </div>
    </div>
  </section>

  <section class="anime-text-container" aria-label="About upintown introduction">
    <div class="home-spotlight-top-bar">
      <div class="container">
        <div class="symbols-container">
          <div class="symbol">
            <Image src={s1} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
        <div class="symbols-container">
          <div class="symbol">
            <Image src={s1} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
    <div class="home-spotlight-bottom-bar">
      <div class="container">
        <p
          class="mono"
          data-animate-type="scramble"
          data-animate-delay="0.2"
          data-animate-on-scroll="true"
        >
          <span>&#9654;</span> Specs loaded
        </p>
        <p
          class="mono"
          data-animate-type="scramble"
          data-animate-delay="0.25"
          data-animate-on-scroll="true"
        >
          / Readme.md
        </p>
      </div>
    </div>
    <div class="container">
      <div class="copy-container">
        <div class="anime-text">
          <p>
            Welcome to upintown, where digital solutions are crafted with precision and creativity.
            This isn't just a portfolio—it's a showcase of innovation, expertise, and dedication.
          </p>
          <p>
            We design with purpose, develop with care, and believe every detail matters. From
            concept to deployment, everything is built with intent and passion. This space
            celebrates modern technology, meaningful design, and results that make an impact.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="about-skills" aria-labelledby="skills-heading">
    <div class="container">
      <div class="about-skills-col">
        <div class="symbols-container">
          <div class="symbol">
            <Image src={s1} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={s2} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
        <div class="about-skills-copy-wrapper">
          <div class="about-skills-callout">
            <p
              class="mono"
              data-animate-type="scramble"
              data-animate-delay="0.2"
              data-animate-on-scroll="true"
            >
              <span>&#9654;</span> Full-spectrum digital capabilities
            </p>
          </div>
          <div class="about-skills-header">
            <h2
              id="skills-heading"
              data-animate-type="line-reveal"
              data-animate-delay="0.4"
              data-animate-on-scroll="true"
            >
              From concept to deployment, we deliver <span class="accent-text">complete</span> solutions
            </h2>
          </div>
        </div>
      </div>
      <div class="about-skills-col skills-playground">
        <div class="object-container">
          <div class="object os-1"><p class="mono">Web Apps</p></div>
          <div class="object os-2"><p class="mono">Database</p></div>
          <div class="object os-3"><p class="mono">AI Solutions</p></div>
          <div class="object os-1"><p class="mono">Automation</p></div>
          <div class="object os-2"><p class="mono">Infrastructure</p></div>
          <div class="object os-3"><p class="mono">APIs</p></div>
          <div class="object os-1"><p class="mono">Cloud</p></div>
          <div class="object os-2"><p class="mono">DevOps</p></div>
          <div class="object os-3"><p class="mono">Analytics</p></div>
          <div class="object os-1"><p class="mono">Mobile</p></div>
        </div>
      </div>
    </div>
  </section>

  <section class="about-company" aria-label="Company values and foundation">
    <div class="home-spotlight-top-bar">
      <div class="container">
        <div class="symbols-container">
          <div class="symbol">
            <Image src={s1} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={s2} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={s3} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
        <div class="symbols-container">
          <div class="symbol">
            <Image src={s1} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={s2} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={s3} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
    <div class="home-spotlight-bottom-bar">
      <div class="container">
        <p
          class="mono"
          data-animate-type="scramble"
          data-animate-delay="0.2"
          data-animate-on-scroll="true"
        >
          <span>&#9654;</span> Company DNA
        </p>
        <p
          class="mono"
          data-animate-type="scramble"
          data-animate-delay="0.25"
          data-animate-on-scroll="true"
        >
          / Foundation
        </p>
      </div>
    </div>
    <div class="container">
      <div class="about-company-grid">
        <div class="about-company-card">
          <div class="about-company-card-header">
            <p class="mono">01.</p>
            <h3
              data-animate-type="line-reveal"
              data-animate-delay="0.2"
              data-animate-on-scroll="true"
            >
              Excellence
            </h3>
          </div>
          <div class="about-company-card-content">
            <p
              data-animate-type="line-reveal"
              data-animate-delay="0.3"
              data-animate-on-scroll="true"
            >
              We don't settle for average. Every line of code, every design decision, every
              deployment—crafted with precision and purpose.
            </p>
          </div>
        </div>

        <div class="about-company-card">
          <div class="about-company-card-header">
            <p class="mono">02.</p>
            <h3
              data-animate-type="line-reveal"
              data-animate-delay="0.2"
              data-animate-on-scroll="true"
            >
              Modern Stack
            </h3>
          </div>
          <div class="about-company-card-content">
            <p
              data-animate-type="line-reveal"
              data-animate-delay="0.3"
              data-animate-on-scroll="true"
            >
              We leverage cutting-edge tools and frameworks. TypeScript, React, Astro, GSAP—our tech
              choices ensure performance, scalability, and future-proof solutions.
            </p>
          </div>
        </div>

        <div class="about-company-card">
          <div class="about-company-card-header">
            <p class="mono">03.</p>
            <h3
              data-animate-type="line-reveal"
              data-animate-delay="0.2"
              data-animate-on-scroll="true"
            >
              End-to-End
            </h3>
          </div>
          <div class="about-company-card-content">
            <p
              data-animate-type="line-reveal"
              data-animate-delay="0.3"
              data-animate-on-scroll="true"
            >
              From initial concept to final deployment, we handle it all. Database architecture, API
              development, cloud infrastructure—complete digital ecosystems.
            </p>
          </div>
        </div>

        <div class="about-company-card">
          <div class="about-company-card-header">
            <p class="mono">04.</p>
            <h3
              data-animate-type="line-reveal"
              data-animate-delay="0.2"
              data-animate-on-scroll="true"
            >
              Detail-Driven
            </h3>
          </div>
          <div class="about-company-card-content">
            <p
              data-animate-type="line-reveal"
              data-animate-delay="0.3"
              data-animate-on-scroll="true"
            >
              The difference is in the details. Clean code, smooth animations, optimized
              performance, accessible interfaces—we obsess over what others overlook.
            </p>
          </div>
        </div>

        <div class="about-company-card">
          <div class="about-company-card-header">
            <p class="mono">05.</p>
            <h3
              data-animate-type="line-reveal"
              data-animate-delay="0.2"
              data-animate-on-scroll="true"
            >
              Launch Ready
            </h3>
          </div>
          <div class="about-company-card-content">
            <p
              data-animate-type="line-reveal"
              data-animate-delay="0.3"
              data-animate-on-scroll="true"
            >
              We don't just build prototypes. We deliver production-ready solutions. Tested,
              optimized, and ready to scale from day one.
            </p>
          </div>
        </div>

        <div class="about-company-card">
          <div class="about-company-card-header">
            <p class="mono">06.</p>
            <h3
              data-animate-type="line-reveal"
              data-animate-delay="0.2"
              data-animate-on-scroll="true"
            >
              Innovation
            </h3>
          </div>
          <div class="about-company-card-content">
            <p
              data-animate-type="line-reveal"
              data-animate-delay="0.3"
              data-animate-on-scroll="true"
            >
              We stay ahead of the curve. AI integration, automation pipelines, modern DevOps—we
              bring tomorrow's solutions to today's challenges.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="outro" aria-label="Call to action">
    <div class="container">
      <h2>Let's <span class="accent-text">build</span> something great</h2>
    </div>
    <div class="outro-strips">
      <div class="outro-strip os-1">
        <div class="skill skill-var-1"><p class="mono">Frontend</p></div>
        <div class="skill skill-var-red"><p class="mono">AI Solutions</p></div>
        <div class="skill skill-var-3"><p class="mono">Performance</p></div>
        <div class="skill skill-var-1"><p class="mono">Clean Code</p></div>
        <div class="skill skill-var-red"><p class="mono">Automation</p></div>
        <div class="skill skill-var-1"><p class="mono">Precision</p></div>
      </div>
      <div class="outro-strip os-2">
        <div class="skill skill-var-2"><p class="mono">Motion</p></div>
        <div class="skill skill-var-3"><p class="mono">Design</p></div>
        <div class="skill skill-var-1"><p class="mono">Infrastructure</p></div>
      </div>
      <div class="outro-strip os-3">
        <div class="skill skill-var-2"><p class="mono">Details</p></div>
        <div class="skill skill-var-3"><p class="mono">Quality</p></div>
        <div class="skill skill-var-1"><p class="mono">AI Integration</p></div>
        <div class="skill skill-var-2"><p class="mono">Solutions</p></div>
        <div class="skill skill-var-3"><p class="mono">Creativity</p></div>
        <div class="skill skill-var-3"><p class="mono">Animations</p></div>
        <div class="skill skill-var-1"><p class="mono">Best Practices</p></div>
      </div>
      <div class="outro-strip os-4">
        <div class="skill skill-var-1"><p class="mono">TypeScript</p></div>
        <div class="skill skill-var-2"><p class="mono">React</p></div>
        <div class="skill skill-var-3"><p class="mono">ML Systems</p></div>
      </div>
      <div class="outro-strip os-5">
        <div class="skill skill-var-1"><p class="mono">Web Apps</p></div>
        <div class="skill skill-var-red"><p class="mono">Digital</p></div>
        <div class="skill skill-var-3"><p class="mono">Intelligent Automation</p></div>
        <div class="skill skill-var-1"><p class="mono">Excellence</p></div>
        <div class="skill skill-var-2"><p class="mono">Live Sites</p></div>
        <div class="skill skill-var-red"><p class="mono">AI Infrastructure</p></div>
        <div class="skill skill-var-1"><p class="mono">Launch Ready</p></div>
        <div class="skill skill-var-red"><p class="mono">upintown</p></div>
      </div>
      <div class="outro-strip os-6">
        <div class="skill skill-var-3"><p class="mono">DevOps</p></div>
        <div class="skill skill-var-1"><p class="mono">Reliable</p></div>
        <div class="skill skill-var-2"><p class="mono">Cloud Native</p></div>
        <div class="skill skill-var-3"><p class="mono">Modern Stack</p></div>
      </div>
    </div>
  </section>

  <!-- Matter.js for physics animation - Load before other scripts -->
  <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/matter-js/0.19.0/matter.min.js"
  ></script>
</BaseLayout>
