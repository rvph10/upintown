---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { PAGE_SEO } from '../data/seo-config';

// Import page styles
import '../styles/project.css';

// Import symbols
import symbol1 from '../../public/symbols/s1.png';
import symbol2 from '../../public/symbols/s2.png';
import symbol3 from '../../public/symbols/s3.png';

// Import project images
import projectImg1 from '../../public/project-images/project-img-1.png';
import projectImg2 from '../../public/project-images/project-img-2.png';
import projectImg3 from '../../public/project-images/project-img-3.png';
import projectImg4 from '../../public/project-images/project-img-4.png';
import projectImg5 from '../../public/project-images/project-img-5.png';
---

<BaseLayout
  title={PAGE_SEO.project.title}
  description={PAGE_SEO.project.description}
  image={PAGE_SEO.project.image}
  keywords={PAGE_SEO.project.keywords}
>
  <div class="home-spotlight-top-bar" role="presentation">
    <div class="container">
      <div class="symbols-container">
        <div class="symbol">
          <Image src={symbol1} alt="Decorative geometric symbol" loading="eager" />
        </div>
      </div>
      <div class="symbols-container">
        <div class="symbol">
          <Image src={symbol1} alt="Decorative geometric symbol" loading="eager" />
        </div>
      </div>
    </div>
  </div>

  <section class="project-header" aria-labelledby="project-title">
    <div class="container">
      <div class="project-title">
        <h1 id="project-title" data-animate-type="reveal" data-animate-delay="0.25">
          Terrene - Interior Studio
        </h1>
      </div>
      <div class="project-header-divider"></div>
      <div class="project-meta">
        <div class="project-meta-col">
          <p data-animate-type="line-reveal" data-animate-delay="0.25">Terrene.co</p>
          <p data-animate-type="line-reveal" data-animate-delay="0.3">Website</p>
        </div>
        <div class="project-meta-col">
          <div class="project-meta-sub-col">
            <p data-animate-type="line-reveal" data-animate-delay="0.25">August 2025</p>
            <p data-animate-type="line-reveal" data-animate-delay="0.3">
              Creative Dev, UI/UX Design
            </p>
          </div>
          <div class="project-meta-sub-col">
            <p data-animate-type="line-reveal" data-animate-delay="0.25">Client</p>
            <p data-animate-type="line-reveal" data-animate-delay="0.3">Terrene</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="project-banner-img" aria-label="Project showcase video">
    <div class="container">
      <video
        autoplay
        muted
        loop
        playsinline
        preload="metadata"
        aria-label="Terrene Interior Studio website demonstration"
      >
        <source src="/project-images/project-showcase.mp4" type="video/mp4" />
        <Image
          src={projectImg2}
          alt="Terrene Interior Studio website showcase - elegant homepage with minimalist design"
          loading="eager"
          widths={[800, 1200, 1920]}
          sizes="100vw"
        />
      </video>
    </div>
  </section>

  <section class="project-overview" aria-labelledby="project-overview-heading">
    <h2 id="project-overview-heading" class="visually-hidden">Project Overview</h2>
    <div class="container">
      <div class="project-overview-col"></div>
      <div class="project-overview-col">
        <div class="project-stack">
          <h3
            class="mono"
            data-animate-type="scramble"
            data-animate-delay="0.2"
            data-animate-on-scroll="true"
          >
            <span>&#9654;</span> Stack
          </h3>
          <br />
          <p data-animate-type="line-reveal" data-animate-delay="0.3" data-animate-on-scroll="true">
            Next.js
          </p>
          <p data-animate-type="line-reveal" data-animate-delay="0.4" data-animate-on-scroll="true">
            Tailwind CSS
          </p>
          <p data-animate-type="line-reveal" data-animate-delay="0.5" data-animate-on-scroll="true">
            Supabase
          </p>
          <p data-animate-type="line-reveal" data-animate-delay="0.6" data-animate-on-scroll="true">
            Framer Motion
          </p>
          <p data-animate-type="line-reveal" data-animate-delay="0.7" data-animate-on-scroll="true">
            GSAP
          </p>
          <p data-animate-type="line-reveal" data-animate-delay="0.8" data-animate-on-scroll="true">
            Lenis
          </p>
        </div>
        <div class="project-overview-copy">
          <h3
            class="mono"
            data-animate-type="scramble"
            data-animate-delay="0.9"
            data-animate-on-scroll="true"
          >
            <span>&#9654;</span> Background
          </h3>
          <br />
          <p data-animate-type="line-reveal" data-animate-delay="1" data-animate-on-scroll="true">
            Terrene is an interior studio that specializes in creating unique and bespoke interiors.
            They are known for their use of natural materials and their commitment to
            sustainability. They are based in London and have a team of talented designers and
            craftsmen.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="project-snapshots" aria-labelledby="snapshots-heading">
    <h2 id="snapshots-heading" class="visually-hidden">Project Screenshots</h2>
    <div class="home-spotlight-top-bar" role="presentation">
      <div class="container">
        <div class="symbols-container">
          <div class="symbol">
            <Image src={symbol1} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={symbol2} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
        <div class="symbols-container">
          <div class="symbol">
            <Image src={symbol2} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={symbol1} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
    <div class="home-spotlight-bottom-bar" role="presentation">
      <div class="container">
        <p
          class="mono"
          data-animate-type="scramble"
          data-animate-delay="0.2"
          data-animate-on-scroll="true"
        >
          <span>&#9654;</span> Interface Study
        </p>
        <p
          class="mono"
          data-animate-type="scramble"
          data-animate-delay="0.25"
          data-animate-on-scroll="true"
        >
          / Moodboard
        </p>
      </div>
    </div>
    <div class="project-snapshots-wrapper">
      <div class="project-snapshot">
        <Image
          src={projectImg1}
          alt="Terrene project - Homepage hero section with elegant typography and natural imagery"
          loading="lazy"
          widths={[600, 1000, 1400]}
          sizes="(max-width: 768px) 100vw, 80vw"
          format="webp"
        />
      </div>
      <div class="project-snapshot">
        <Image
          src={projectImg2}
          alt="Terrene project - Project gallery page showcasing interior design portfolio"
          loading="lazy"
          widths={[600, 1000, 1400]}
          sizes="(max-width: 768px) 100vw, 80vw"
          format="webp"
        />
      </div>
      <div class="project-snapshot">
        <Image
          src={projectImg3}
          alt="Terrene project - About page with team information and studio philosophy"
          loading="lazy"
          widths={[600, 1000, 1400]}
          sizes="(max-width: 768px) 100vw, 80vw"
          format="webp"
        />
      </div>
      <div class="project-snapshot">
        <Image
          src={projectImg4}
          alt="Terrene project - Contact page with interactive map and inquiry form"
          loading="lazy"
          widths={[600, 1000, 1400]}
          sizes="(max-width: 768px) 100vw, 80vw"
          format="webp"
        />
      </div>
      <div class="project-snapshot">
        <Image
          src={projectImg5}
          alt="Terrene project - Mobile responsive design showing adaptive layouts"
          loading="lazy"
          widths={[600, 1000, 1400]}
          sizes="(max-width: 768px) 100vw, 80vw"
          format="webp"
        />
      </div>
    </div>
    <div class="snapshots-progress-bar">
      <div class="progress-bar"></div>
    </div>
  </section>

  <section class="project-info" aria-labelledby="client-review-heading">
    <div class="container">
      <div class="project-info-col"></div>
      <div class="project-info-col">
        <div class="project-info-copy">
          <h2
            id="client-review-heading"
            class="mono"
            data-animate-type="scramble"
            data-animate-delay="0.2"
            data-animate-on-scroll="true"
          >
            <span>&#9654;</span> Client Review
          </h2>
          <br />
          <p
            data-animate-type="line-reveal"
            data-animate-delay="0.25"
            data-animate-on-scroll="true"
          >
            Working with upintown felt more like teaming up with a creative partner than hiring a
            developer. From the first conversation, they understood the energy and mood we were
            aiming for. They asked the right questions, explored visual directions with intent, and
            delivered a build that felt as thoughtful as it was bold.
          </p>
          <br />
          <p data-animate-type="line-reveal" data-animate-delay="0.7" data-animate-on-scroll="true">
            Every detail, from scroll behavior to motion timing was carefully considered. upintown
            brought clarity to a concept that had only lived in loose sketches and moodboards. They
            helped us tell a story through interface and interaction. The result is something that
            not only represents who we are, but inspires how we build from here.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="next-project" aria-labelledby="next-project-heading">
    <div class="home-spotlight-top-bar" role="presentation">
      <div class="container">
        <div class="symbols-container">
          <div class="symbol">
            <Image src={symbol1} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={symbol2} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={symbol3} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
        <div class="symbols-container">
          <div class="symbol">
            <Image src={symbol3} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={symbol2} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={symbol1} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
    <div class="container next-project-data">
      <div class="next-project-title">
        <h2 id="next-project-heading">Coming Soon</h2>
      </div>
      <div class="next-project-header-divider"></div>
      <div class="next-project-meta">
        <div class="next-project-meta-col">
          <p>Project TBA</p>
          <p>Website</p>
        </div>
        <div class="next-project-meta-col">
          <div class="next-project-meta-sub-col">
            <p>2025</p>
            <p>Creative Dev, UI/UX Design</p>
          </div>
          <div class="next-project-meta-sub-col">
            <p>Client</p>
            <p>TBA</p>
          </div>
        </div>
      </div>
    </div>
    <div class="home-spotlight-bottom-bar">
      <div class="container">
        <p class="mono"><span>&#9654;</span> Next fragment</p>
        <p class="mono">/ Coming Soon</p>
      </div>
    </div>
  </section>
</BaseLayout>

<script src="../scripts/project.js" defer></script>
