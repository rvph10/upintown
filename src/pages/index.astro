---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

// Import symbols
import symbol1 from '../../public/symbols/s1.png';
import symbol1Light from '../../public/symbols/s1-light.png';
import symbol2Light from '../../public/symbols/s2-light.png';
import symbol3Light from '../../public/symbols/s3-light.png';

// Import upintown logo
import uptownLogo from '../../public/global/upintown.svg';

// Import spotlight images
import spotlightImg1 from '../../public/spotlight-images/spotlight-img-1.png';
import spotlightImg2 from '../../public/spotlight-images/spotlight-img-2.png';
import spotlightImg3 from '../../public/spotlight-images/spotlight-img-3.webp';
import spotlightImg4 from '../../public/spotlight-images/spotlight-img-4.png';
import spotlightImg5 from '../../public/spotlight-images/spotlight-img-5.webp';
import spotlightImg6 from '../../public/spotlight-images/spotlight-img-6.webp';
import spotlightImg7 from '../../public/spotlight-images/spotlight-img-7.png';
import spotlightImg8 from '../../public/spotlight-images/spotlight-img-8.webp';
import spotlightImg9 from '../../public/spotlight-images/spotlight-img-9.jpeg';
---

<BaseLayout
  title="upintown | Digital Solutions - Modern Web Development"
  description="upintown creates cutting-edge digital solutions with precision and creativity. Expert in Astro, React, TypeScript, GSAP animations, and modern web development."
  image="/og-image.jpg"
  pageStyles={['home']}
  pageScripts={['anime', 'home']}
>
  <section class="hero">
    <div class="home-services-top-bar">
      <div class="container">
        <div class="symbols-container">
          <div class="symbol">
            <Image src={symbol1} alt="Decorative geometric symbol" loading="eager" />
          </div>
        </div>
        <div class="symbols-container">
          <div class="symbol">
            <Image src={symbol1} alt="Decorative geometric symbol" loading="eager" />
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="hero-content">
        <div class="hero-header">
          <h1 data-animate-type="reveal" data-animate-delay="0.25">
            <Image src={uptownLogo} alt="upintown - Digital Solutions" loading="eager" />
          </h1>
        </div>
        <div class="hero-footer">
          <div class="hero-footer-copy">
            <p class="md" data-animate-type="line-reveal" data-animate-delay="0.25">
              upintown builds digital solutions with precision and creativity. Every project starts
              with a solid plan and ends with a clean launch. No compromises.
            </p>
          </div>
          <div class="hero-footer-tags">
            <p class="mono" data-animate-type="scramble" data-animate-delay="0.5">
              <span>&#9654;</span> Digital Innovation
            </p>
            <p class="mono" data-animate-type="scramble" data-animate-delay="0.5">
              <span>&#9654;</span> Modern Solutions
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="home-about">
    <div class="container">
      <div class="home-about-col">
        <div class="symbols-container">
          <div class="symbol">
            <Image src={symbol2Light} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
        <div class="home-about-header">
          <p
            class="mono"
            data-animate-type="scramble"
            data-animate-delay="0.2"
            data-animate-on-scroll="true"
          >
            <span>&#9654;</span> Skillset
          </p>
          <h3
            data-animate-type="line-reveal"
            data-animate-delay="0.2"
            data-animate-on-scroll="true"
          >
            Expertise that <span class="accent-text">drives</span> results
          </h3>
        </div>
      </div>
      <div class="home-about-col">
        <div class="home-about-col-row">
          <div class="home-about-card">
            <p
              class="mono"
              data-animate-type="scramble"
              data-animate-delay="0.2"
              data-animate-on-scroll="true"
            >
              [ Service 01 ]
            </p>
            <h4
              data-animate-type="line-reveal"
              data-animate-delay="0.2"
              data-animate-on-scroll="true"
            >
              Strategy
            </h4>
          </div>
          <div class="home-about-card">
            <p
              class="mono"
              data-animate-type="scramble"
              data-animate-delay="0.25"
              data-animate-on-scroll="true"
            >
              [ Service 02 ]
            </p>
            <h4
              data-animate-type="line-reveal"
              data-animate-delay="0.25"
              data-animate-on-scroll="true"
            >
              Design
            </h4>
          </div>
        </div>
        <div class="home-about-col-row">
          <div class="home-about-card">
            <p
              class="mono"
              data-animate-type="scramble"
              data-animate-delay="0.3"
              data-animate-on-scroll="true"
            >
              [ Service 03 ]
            </p>
            <h4
              data-animate-type="line-reveal"
              data-animate-delay="0.3"
              data-animate-on-scroll="true"
            >
              Development
            </h4>
          </div>
          <div class="home-about-card">
            <p
              class="mono"
              data-animate-type="scramble"
              data-animate-delay="0.35"
              data-animate-on-scroll="true"
            >
              [ Service 04 ]
            </p>
            <h4
              data-animate-type="line-reveal"
              data-animate-delay="0.35"
              data-animate-on-scroll="true"
            >
              Launch
            </h4>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="home-spotlight">
    <div class="home-spotlight-top-bar">
      <div class="container">
        <div class="symbols-container">
          <div class="symbol">
            <Image src={symbol1Light} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={symbol2Light} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={symbol3Light} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
        <div class="symbols-container">
          <div class="symbol">
            <Image src={symbol3Light} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={symbol2Light} alt="Decorative geometric symbol" loading="lazy" />
          </div>
          <div class="symbol">
            <Image src={symbol1Light} alt="Decorative geometric symbol" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
    <div class="home-spotlight-bottom-bar">
      <div class="container">
        <p
          class="mono"
          data-animate-type="scramble"
          data-animate-delay="0.2"
          data-animate-on-scroll="true"
        >
          <span>&#9654;</span> Portfolio
        </p>
        <p
          class="mono"
          data-animate-type="scramble"
          data-animate-delay="0.25"
          data-animate-on-scroll="true"
        >
          / Featured Work
        </p>
      </div>
    </div>
    <div class="container">
      <div class="spotlight-intro-header">
        <h3 data-animate-type="line-reveal" data-animate-delay="0.3" data-animate-on-scroll="true">
          <span class="accent-text">Quality</span> over quantity, always
        </h3>
      </div>
    </div>
    <div class="home-spotlight-images">
      <div class="home-spotlight-images-row">
        <div class="home-spotlight-image"></div>
        <div class="home-spotlight-image image-holder">
          <Image
            src={spotlightImg1}
            alt="Modern website interface design showcasing clean typography and minimalist layout"
            loading="lazy"
            widths={[400, 800, 1200]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
        <div class="home-spotlight-image"></div>
        <div class="home-spotlight-image image-holder">
          <Image
            src={spotlightImg2}
            alt="Interactive web application with smooth animations and modern UI elements"
            loading="lazy"
            widths={[400, 800, 1200]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
      </div>
      <div class="home-spotlight-images-row">
        <div class="home-spotlight-image image-holder">
          <Image
            src={spotlightImg3}
            alt="Portfolio project featuring bold typography and dynamic color scheme"
            loading="lazy"
            widths={[400, 800, 1200]}
            sizes="(max-width: 768px) 100vw, 25vw"
          />
        </div>
        <div class="home-spotlight-image"></div>
        <div class="home-spotlight-image"></div>
        <div class="home-spotlight-image"></div>
      </div>
      <div class="home-spotlight-images-row">
        <div class="home-spotlight-image"></div>
        <div class="home-spotlight-image image-holder">
          <Image
            src={spotlightImg4}
            alt="E-commerce website with product showcase and seamless user experience"
            loading="lazy"
            widths={[400, 800, 1200]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
        <div class="home-spotlight-image image-holder">
          <Image
            src={spotlightImg5}
            alt="Creative landing page with engaging visual hierarchy and call-to-actions"
            loading="lazy"
            widths={[400, 800, 1200]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
        <div class="home-spotlight-image"></div>
      </div>
      <div class="home-spotlight-images-row">
        <div class="home-spotlight-image"></div>
        <div class="home-spotlight-image image-holder">
          <Image
            src={spotlightImg6}
            alt="Dashboard interface with data visualization and intuitive navigation"
            loading="lazy"
            widths={[400, 800, 1200]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
        <div class="home-spotlight-image"></div>
        <div class="home-spotlight-image image-holder">
          <Image
            src={spotlightImg7}
            alt="Mobile-first responsive design with smooth transitions and gestures"
            loading="lazy"
            widths={[400, 800, 1200]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
      </div>
      <div class="home-spotlight-images-row">
        <div class="home-spotlight-image image-holder">
          <Image
            src={spotlightImg8}
            alt="Brand identity system with consistent design language across platforms"
            loading="lazy"
            widths={[400, 800, 1200]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
        <div class="home-spotlight-image"></div>
        <div class="home-spotlight-image image-holder">
          <Image
            src={spotlightImg9}
            alt="Content management system with modern editorial tools and workflow"
            loading="lazy"
            widths={[400, 800, 1200]}
            sizes="(max-width: 768px) 50vw, 25vw"
          />
        </div>
        <div class="home-spotlight-image"></div>
      </div>
    </div>
    <div class="spotlight-mask-image-container">
      <div class="spotlight-mask-image">
        <video autoplay muted loop playsinline preload="metadata">
          <source src="/spotlight-images/spotlight-banner.webm" type="video/webm" />
          <source src="/spotlight-images/spotlight-banner-optimized.gif" type="image/gif" />
          <img
            src="/spotlight-images/spotlight-banner-optimized.gif"
            alt="Animated showcase of modern digital solutions and creative interfaces"
            loading="lazy"
          />
        </video>
      </div>
      <div class="container">
        <div class="spotlight-mask-header">
          <h3>Crafted with <span class="accent-text">Modern</span> Inspiration</h3>
        </div>
      </div>
    </div>
  </section>

  <section class="outro">
    <div class="container">
      <h3>Let's <span class="accent-text">build</span> something great</h3>
    </div>
    <div class="outro-strips">
      <div class="outro-strip os-1">
        <div class="skill skill-var-1"><p class="mono">Frontend</p></div>
        <div class="skill skill-var-red"><p class="mono">UX</p></div>
        <div class="skill skill-var-3"><p class="mono">Performance</p></div>
        <div class="skill skill-var-1"><p class="mono">Clean Code</p></div>
        <div class="skill skill-var-red"><p class="mono">Innovation</p></div>
        <div class="skill skill-var-1"><p class="mono">Precision</p></div>
      </div>
      <div class="outro-strip os-2">
        <div class="skill skill-var-2"><p class="mono">Motion</p></div>
        <div class="skill skill-var-3"><p class="mono">Design</p></div>
        <div class="skill skill-var-1"><p class="mono">Modern Stack</p></div>
      </div>
      <div class="outro-strip os-3">
        <div class="skill skill-var-2"><p class="mono">Details</p></div>
        <div class="skill skill-var-3"><p class="mono">Quality</p></div>
        <div class="skill skill-var-1"><p class="mono">Builds</p></div>
        <div class="skill skill-var-2"><p class="mono">Solutions</p></div>
        <div class="skill skill-var-3"><p class="mono">Creativity</p></div>
        <div class="skill skill-var-3"><p class="mono">Animations</p></div>
        <div class="skill skill-var-1"><p class="mono">Best Practices</p></div>
      </div>
      <div class="outro-strip os-4">
        <div class="skill skill-var-1"><p class="mono">TypeScript</p></div>
        <div class="skill skill-var-2"><p class="mono">React</p></div>
        <div class="skill skill-var-3"><p class="mono">Astro</p></div>
      </div>
      <div class="outro-strip os-5">
        <div class="skill skill-var-1"><p class="mono">Web Apps</p></div>
        <div class="skill skill-var-red"><p class="mono">Digital</p></div>
        <div class="skill skill-var-3"><p class="mono">GSAP</p></div>
        <div class="skill skill-var-1"><p class="mono">Excellence</p></div>
        <div class="skill skill-var-2"><p class="mono">Live Sites</p></div>
        <div class="skill skill-var-red"><p class="mono">Professional</p></div>
        <div class="skill skill-var-1"><p class="mono">Launch Ready</p></div>
        <div class="skill skill-var-red"><p class="mono">upintown</p></div>
      </div>
      <div class="outro-strip os-6">
        <div class="skill skill-var-3"><p class="mono">UI Expert</p></div>
        <div class="skill skill-var-1"><p class="mono">Reliable</p></div>
        <div class="skill skill-var-2"><p class="mono">Deployed</p></div>
        <div class="skill skill-var-3"><p class="mono">Modern CSS</p></div>
      </div>
    </div>
  </section>
</BaseLayout>
