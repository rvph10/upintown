---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata | string;
  alt: string;
  widths?: number[];
  sizes?: string;
  loading?: 'lazy' | 'eager';
  class?: string;
  quality?: number;
  format?: 'avif' | 'webp' | 'png' | 'jpg';
}

const {
  src,
  alt,
  widths = [400, 800, 1200, 1920],
  sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw',
  loading = 'lazy',
  class: className = '',
  quality = 80,
  format = 'webp',
} = Astro.props;
---

{
  typeof src === 'string' ? (
    <img src={src} alt={alt} loading={loading} class={className} />
  ) : (
    <Image
      src={src}
      alt={alt}
      widths={widths}
      sizes={sizes}
      loading={loading}
      class={className}
      quality={quality}
      format={format}
      inferSize={true}
    />
  )
}
